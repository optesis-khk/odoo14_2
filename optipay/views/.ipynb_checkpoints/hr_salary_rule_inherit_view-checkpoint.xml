<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_salary_rule_form_inherit" model="ir.ui.view">
            <field name="name">hr.salary.rule.form.inherit</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='appears_on_payslip']" position="after">
                    <field name="is_prorata"/>
                    <field name="simulate_ok"/>
                </xpath>
                
                <xpath expr="//page[@name='description']" position="after">
                     <page string="Inputs">
                            <field name="input_ids" mode="tree">
                                <tree string="Input Data" editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                </tree>
                            </field>
                      </page>
                </xpath>
                
                
            </field>
        </record>
    
       <record id="view_hr_employee_grade_form_inherit" model="ir.ui.view">
        <field name="name">hr.payroll.structure.form</field>
        <field name="model">hr.payroll.structure</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_employee_grade_form"/>
        <field name="arch" type="xml">
            <data> 
              <xpath expr="//form" position="replace">
                 <form string="Employee Function">
                  <group col="4">
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="country_id" options="{'no_create': True}"/>
                    <!--<field name="code"/>
                    <field name="parent_id"/>-->
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                  </group>
                  <notebook colspan="4">
                    <page string="Salary Rules">
                        <field name="rule_ids">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="category_id"/>
                                <field name="sequence" invisible="1"/>
                               <!--  <field name="register_id"/>-->
                            </tree>
                        </field>
                     </page>
                  </notebook>
                 </form>
                </xpath> 
            </data>
           
        </field>
       </record>
    
       <record id="view_hr_payroll_structure_filter" model="ir.ui.view">
            <field name="name">hr.payroll.structure.select</field>
            <field name="model">hr.payroll.structure</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payroll_structure_filter"/>
            <field name="arch" type="xml">
                <filter name="group_by_type_id" position="attributes">
                   <attribute name="invisible">1</attribute>
                </filter>
            </field>
        </record>
    
    
    

</odoo>