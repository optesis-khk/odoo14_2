<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
         <template id="external_layoutboxed_cms" inherit_id="web.external_layout_boxed">
        <!-- Custom header -->
      
          <xpath expr="//div[@class='o_boxed_header']" position="replace">    
              <div class="o_boxed_header">
                   <table  class="table table-sm o_main_table">
                    <tr>
                       <td rowspan="2" align="center" class="bpro_border_left" style="border:1px solid;font-size:16px;">
                        <div class="col-6">
                          <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 65px;" alt="Logo"/>
                        </div>
                      </td>
                     <td rowspan="2"  align="center" class="align-middle" style="border:1px solid;font-size:16px;">
                        <strong>ENREGISTREMENT <br/>Bon de de commande </strong>
                      </td>
                     <td class="text-center" rowspan="1" style="border:1px solid;font-size:16px;"> <strong> PS 02 E 08 </strong></td>
                        <td class="text-center" rowspan="1" style="border:1px solid;font-size:16px;">Date d'application <br/> 30/06/08</td> 
                   </tr>
                    <tr>
                      
                         <td class="text-center" rowspan="1" style="border:1px solid;font-size:16px;"> A </td> 
                     <td class="text-center" rowspan="1" style="border:1px solid;font-size:16px;"> Page/Page <br/> 1/1 </td>
                   </tr>
                      
                  </table>
                </div>
         </xpath>
             
          <xpath expr="//div[@class='pt-5']" position="replace">    
              <div class="pt-5">

                </div>
         </xpath>
                 
             
         <xpath expr="//div[@class='text-center']" position="replace">    
          <div class="text-center">
              
            </div>
         </xpath>
        
    </template>
    
        
        <template id="bc_cms_facture" inherit_id="purchase.report_purchaseorder_document">
        
            <xpath expr="//t[@t-set='address']" position="replace">
                  
                      <div style="text-align: right;">
                         <strong>Dakar, le: <span t-field="o.date_order_cms"/></strong>
                      </div>
                
            </xpath>
               
           <xpath expr="//div[@class='page']" position="replace">
           
                    
            <div class="page">
           
                
            <div class="row">
                <div style="text-align: center;">
                    <strong>BON DE COMMANDE : <span t-field="o.name"/></strong><br/>
                </div>

            </div>
                <br/>
              
            <div class="row">
            
                <div style="text-align: left;">
                   <strong>FOURNISSEUR: <span t-field="o.partner_id"/> </strong><br/><br/>
                
                </div>
                
           
            </div>

            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th name="th_description"><strong>Description</strong></th>
                        <th name="th_taxes"><strong>Taxes</strong></th>
                        <th name="th_date_req" class="text-center"><strong>Date Req.</strong></th>
                        <th name="th_quantity" class="text-right"><strong>Qty</strong></th>
                        <th name="th_price_unit" class="text-right"><strong>Unit Price</strong></th>
                        <th name="th_amount" class="text-right"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-foreach="o.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td id="product">
                                    <span t-field="line.name"/>
                                </td>
                                <td name="td_taxes">
                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.date_planned"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99" id="section">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99" id="note">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                        <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99" id="subtotal">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
                
                <br/>
                
              <div>
                   <table  class="table table-sm o_main_table">
                  
                       <tr style="height:90px">
                      <td class="text-center" style="border:1px solid;font-size:16px;"><div  style="text-decoration: underline;">VISA <br/>
                         RESPONSABLES DES ACHATS</div><br/>  <span t-field="o.dept_manager_id"/></td>
                      <td class="text-center" style="border:1px solid;font-size:16px;"><div  style="text-decoration: underline;">VISA RSGB </div></td> 
                    <td class="text-center" style="border:1px solid;font-size:16px;"><div  style="text-decoration: underline;">VISA <br/>
                        SECRETAIRE GENERAL</div><br/>  <span t-field="o.finance_manager_id"/></td>
                    <td class="text-center" style="border:1px solid;font-size:16px;"><div  style="text-decoration: underline;">VISA <br/>
                        DEPFC</div></td>
                    <td class="text-center" style="border:1px solid;font-size:16px;"><div  style="text-decoration: underline;">VISA <br/>
                        DPMG</div><br/>  <span t-field="o.finance_manager_id"/></td>
                    <td class="text-center" style="border:1px solid;font-size:16px;"><div  style="text-decoration: underline;">VISA <br/>
                        DIRECTEUR GENERAL</div><br/>  <span t-field="o.director_manager_id"/></td>
                     
                   </tr>
                      
                  </table>
              </div>

        </div>
        
        </xpath>    
        </template>
        
        
